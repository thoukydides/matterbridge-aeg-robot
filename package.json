    "changelog": "https://github.com/thoukydides/matterbridge-aeg-robot/blob/master/CHANGELOG.md",
    "type": "module",
    "main": "dist/index.js",
    "engines": {
        "node": "^22.0.0 || ^20.9.0 || ^18.20.0",
        "matterbridge": "^3.0.0"
    },
    "dependencies": {
        "node-persist": "^4.0.4",
        "semver": "^7.7.1",
        "ts-interface-checker": "^1.0.2",
        "undici": "^6.21.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.24.0",
        "@tsconfig/node18": "^18.2.4",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^18.19.86",
        "@types/node-persist": "^3.1.8",
        "@types/semver": "^7.7.0",
        "eslint": "^9.24.0",
        "globals": "^16.0.0",
        "rimraf": "^6.0.1",
        "ts-interface-builder": "^0.3.3",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1"
    },
    "scripts": {
        "presetup-matterbridge-edge-clone": "rimraf $MATTERBRIDGE_DIR",
        "setup-matterbridge-edge-clone": "git clone --single-branch --branch edge https://github.com/Luligu/matterbridge.git $MATTERBRIDGE_DIR",
        "setup-matterbridge-edge-build": "cd $MATTERBRIDGE_DIR && npm ci && npm run build",
        "setup-matterbridge-edge-link": "ln -sf $MATTERBRIDGE_DIR ./node_modules/matterbridge",
        "setup-matterbridge-edge": "npm run setup-matterbridge-edge-clone && npm run setup-matterbridge-edge-build && npm run setup-matterbridge-edge-link",
        "setup-matterbridge-npm": "npm i -g matterbridge && npm link matterbridge",
        "build-checkers": "mkdir -p ./src/ti && ts-interface-builder -c -o ./src/ti ./src/*-types.ts && tsx bin/ts-interface-post.ts ./src/ti",
        "build-tsc": "tsc -p ./src",
        "build": "npm run build-checkers && npm run build-tsc",
        "start": "node node_modules/matterbridge/dist/cli.js -homedir $MATTERBRIDGE_DIR",
        "start-add": "npm run start -- -add .",
        "start-debug": "NODE_OPTIONS='--inspect-brk' npm run start",
        "clean": "rimraf ./dist",
        "lint": "eslint eslint.config.mjs 'bin/**/*.ts' 'src/**/*.ts' --max-warnings=0",
        "postversion": "git push && git push --tags",
        "prepublishOnly": "npm run build && npm run lint",
        "test": "tsx bin/test-startup.ts"
    }
}
